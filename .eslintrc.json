{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-throw-literal": "off",
        "no-unused-vars": "off",
        "space-before-function-paren": "off",
        "no-console": "error",
        "no-var": "error",
        "no-param-reassign": "error"
    }
}